{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // Add this to define the root directory for path resolution
    "paths": {
      "@/*": [
        "app/*"
      ],
      "@components/*": [
        "app/components/*"
      ] // Add specific alias for components
    },
    "typeRoots": [
      "node_modules/@types",
      "node_modules"
    ],
    "types": [
      "ethers"
    ] // Include ethers types for better compatibility
    ,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.ts",
    "next.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
